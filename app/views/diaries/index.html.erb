<div class="container">


<% if current_account   %>
	<% @diary.each do |my_diare| %>
	 <div class="card">

  	<div class="card-header">
    <%= my_diare.title %>
  	</div>

 	  <div class="card-body">
    <h5 class="card-title"> <%= my_diare.body %></h5>
    <h5 class="card-title"> Created by:<%= my_diare.account.email if my_diare.account %></h5>


    <% if  my_diare.account==current_account %>

    <%=  link_to "Delete", remove_post_path, class: "btn btn-danger btn-sm ", method: :delete, data: {confirm: "Are you sure?"} %>





    <% end %>

  	</div>
  </div>


    <% end %>





	<% end %>

	
</div>

