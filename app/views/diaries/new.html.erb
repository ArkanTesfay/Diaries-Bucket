<div class="container">
	<h3 align="center">Create New Diarie</h3>

	<%= form_for( :diaries , :html => {:class => "form-horizontal", :role => "form"}, url: new_path)do |f| %>


	 <div class="form-group">
    <label >Title</label>
    <%= f.text_field :title, class: "form-control", placeholder:"Give your Diarie a meaningfull title" %>
    <label>Body</label>
  	<%= f.text_area :body, size: "60x12" , class: "form-control" , placeholder:"Type anything here" %>
  	<%= f.submit "Create", class: " sbt-btn btn btn-success" %>
  	</div>

	<% end %>
	
</div>
